{
  "compilerOptions": {
    "target": "es6",
    "strict": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "module": "commonjs",
    "baseUrl": ".",
    "types": [
      "mocha",
      "chai",
      "node"
    ],
    "paths": {
      "*": ["types/*"],
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}