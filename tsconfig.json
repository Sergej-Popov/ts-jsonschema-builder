{
  "compilerOptions": {
    "target": "es5",
    "strict": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "./dist",
    "declaration": true,
    "types": [
      "mocha",
      "chai",
      "node"
    ],
    "paths": {
      "*": [
        "./*"
      ]
    },
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./out",
    "node_modules"
  ]
}